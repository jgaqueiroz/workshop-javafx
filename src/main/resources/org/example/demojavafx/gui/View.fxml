<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demojavafx.gui.ViewController">
   <children>
      <Label layoutX="50.0" layoutY="59.0" text="Calculate Sum">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="50.0" layoutY="125.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="50.0" layoutY="175.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="50.0" layoutY="222.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="50.0" layoutY="274.0" text="Result:" />
      <Label fx:id="lblResult" layoutX="90.0" layoutY="274.0" />
   </children>
</AnchorPane>
